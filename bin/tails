#!/usr/bin/env ruby
git_path = File.expand_path('../../.git', __FILE__)

if File.exist?(git_path)
  tails_path = File.expand_path('../../lib', __FILE__)
  $:.unshift(tails_path)
  require_relative "../lib/tails/cli"
end

source_dir = Dir.pwd
if File.exist?(File.join(source_dir,"config/application.rb"))
  $:.unshift(source_dir)
  require "config/application"
  require "tails"
else
  require "tails/cli"
end

Tails::CLI.start(ARGV)
